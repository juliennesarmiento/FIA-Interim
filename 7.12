#!/bin/bash

#######################

reset

if [ "$EUID" -ne 0 ] ; then
  printf "\e[31mPlease run as root!\n"
  printf "Press any key to exit\e[0m\n"
  read -n 1 -s
  exit
fi

if [ -e /etc/redhat-release ] ; then
  printf "\e[1mRunning Scan for "
  printf "$(cat /etc/redhat-release)"
  printf "\e[0m\n"
else
  printf "\e[31m\e[1mYou are not on a Red Hat System!\n"
  printf "Press any key to exit\e[0m\n"
  read -n 1 -s
  kill -9 $PPID
fi

function ctrl_C() {
  kill -9 $PPID  
}

function ctrl_Z() {
  kill -9 $PPID
}

trap ctrl_C INT
trap ctrl_Z 2 20

######################


#7.12

printf "Checking permissions on user home directories: "
for RESULT in `cat /etc/passwd | egrep -v '(root|halt|sync|shutdown)' |awk -F: '($7!="/usr/sbin/nologin" && $7!="/sbin/nologin" && $7!="/bin/false") { print $6 }'`; do
resultperm=$(ls -ld $RESULT)

if [[ ` echo $resultperm | grep "^......w..." ` ]]; then 
	printf "\e[32mNo remediation is needed\e[0m\n"
else
        chmod g= $RESULT
	printf "\e[32mRemediation has been completed\e[0m\n"
fi

if [[ ` echo $resultperm | grep "^.......-.." `  ]]; then
	printf "\e[32mNo remediation is needed\e[0m\n"
else
        chmod o= $RESULT
        printf "\e[32mRemediation has been completed\e[0m\n"
fi

if [[ `echo $resultperm | grep "^........-."` ]]; then
	printf "\e[32mNo remediation is needed\e[0m\n"
else
        chmod o= $RESULT
        printf "\e[32mRemediation has been completed\e[0m\n"
fi

if [[ `echo $resultperm | grep "^.........-"` ]]; then
	printf "\e[32mNo remediation is needed\e[0m\n"
else
        chmod o= $RESULT
        printf "\e[32mRemediation has been completed\e[0m\n"
fi
done


printf "\e[32mCompleted!\n"
printf "Press any key to exit\e[0m\n"

#This kills the process, please remove if not needed.

read -n 1 -s
kill -9 $PPID
