#!/bin/bash

#7.10
printf "Verify No UID 0 Accounts Exist Other Than root: "
VerifyUIDRoot=$(/bin/cat /etc/passwd | /bin/awk -F: '($3 == 0){print $1}')
if [ "$VerifyUIDRoot" = 'root' ]
then
	printf "\e[32mNo remediation is needed\e[0m\n"
else
	userdel -r [ “$VerifyUIDRoot” != ‘root’ ]
	printf "\e[32mRemediation has been completed\e[0m\n"
fi
