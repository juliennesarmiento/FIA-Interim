#!/bin/bash

#7.8
printf "Ensuring password fields are not empty:\n"
PFieldsNEmpty= $(cat /etc/shadow | awk -F: '($2 == "" ) { print $1 " does not have a password "}')
if [ -z "$PFieldsNEmpty" ]; then
	printf "\e[32mNo remediation is needed\e[0m\n"
else
	/usr/bin/passwd -l $1
	printf "\e[32mRemediation has been completed\e[0m\n"
fi
