#!/bin/bash
clear
#8.2
printf "Edit the /etc/motd, /etc/issue and /etc/issue.net files and remove lines containing \m, r, s or v\n".

issue=$(egrep '(\\v|\\r|\\m|\\s)' /etc/issue)
motd=$(egrep '(\\v|\\r|\\m|\\s)' /etc/motd)
issuenet=$(egrep '(\\v|\\r|\\m|\\s)' /etc/issue.net)
regex='(\\v|\\r|\\m|\\s)'
counter=0
if [[ $issue =~ $regex ]]
then 
	counter=$((counter+1))
	printf "\e[32mNo remediation is needed\e[0m\n"
else
	sed -i '/\m/ d' /etc/issue
	sed -i '/\r/ d' /etc/issue
	sed -i '/\s/ d' /etc/issue
	sed -i '/\v/ d' /etc/issue
	printf "\e[32mRemediation has been completed\e[0m\n"
fi
echo  -en "\e[0m"

printf "Checking /etc/motd:\n"
if [[ $motd =~ $regex ]]
then 
	counter=$((counter+1))
	printf "\e[32mNo remediation is needed\e[0m\n"
else
	sed -i '/\m/ d' /etc/motd
	sed -i '/\r/ d' /etc/motd
	sed -i '/\s/ d' /etc/motd
	sed -i '/\v/ d' /etc/motd
	printf "\e[32mRemediation has been completed\e[0m\n"

fi
echo  -en "\e[0m"

printf "Checking /etc/issue.net:\n"
if [[ $issuenet =~ $regex ]]
then 
	counter=$((counter+1))
	printf "\e[32mNo remediation is needed\e[0m\n"
else
	sed -i '/\m/ d' /etc/issue.net
	sed -i '/\r/ d' /etc/issue.net
	sed -i '/\s/ d' /etc/issue.net
	sed -i '/\v/ d' /etc/issue.net
	printf "\e[32mRemediation has been completed\e[0m\n"
fi
echo  -en "\e[0m"
